<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Authentication System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <div class="home">
            <h1>Welcome to the User Authentication System</h1>
            <p>This is a simple application.</p>
        </div>
        <div class="message">
            <%- include('./messages') %>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const successAlert = document.getElementById('success-alert');
            const errorAlert = document.getElementById('error-alert');

            if (successAlert && successAlert.innerHTML !== "") {
                successAlert.classList.add('display');
                setTimeout(() => {
                    successAlert.classList.remove('display');
                }, 5000);
            }
            if (errorAlert && errorAlert.innerHTML !== "") {
                errorAlert.classList.add('display');
                setTimeout(() => {
                    errorAlert.classList.remove('display');
                }, 5000);
            }
        });
    </script>
</body>

</html>
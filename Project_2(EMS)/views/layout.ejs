<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Employee Management System</h1>
      <div class="message"><%- include('./messages') %></div>

      <% if (user) { %>
      <p id="user-p">Welcome, <%= user.username %>!</p>
      <a href="/logout">Logout</a>
      <% }%>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
          const successAlert = document.getElementById('success-alert');
          const errorAlert = document.getElementById('error-alert');
          console.log(successAlert);
          console.log(errorAlert);
          if (!successAlert.innerHTML=="") {
              successAlert.classList.add('display');
              setTimeout(() => {
                  successAlert.classList.remove('display');
              }, 5000);
          }
          if (!errorAlert.innerHTML=="") {
              errorAlert.classList.add('display');
              setTimeout(() => {
                  errorAlert.classList.remove('display');
              }, 5000);
          }
      });
  </script>
  </body>
</html>
